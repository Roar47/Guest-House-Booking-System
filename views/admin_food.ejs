<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <div class="container-sm mx-xl-5 bg-light" style="padding-left: 200px; padding-right: 200px; border: 1px solid black;">
        <h2>Add New food Item</h2>
        <form  action="/admin/foods/add" method="POST">
            <div class="form-group">
                <label for="">Food ID</label>
                <input type="text" class="form-control"  name="fid" required>
            </div>
            <div class="form-group">
                <label for="">Food Name</label>
                <input type="text" class="form-control"  name="fname" required>
            </div>
            <div class="form-group">
                <label for="">Food Type : </label>
                <input type="radio" id="A" name="ftype"   value="1">
                <label for="A">Breakfast</label>
                <input type="radio" id="U" name="ftype"   value="2">
                <label for="U">Lunch</label>
                <input type="radio" id="U" name="ftype"   value="3">
                <label for="U">Dinner</label>
            </div>
            <div class="form-group">
                <label for="">Food Price</label>
                <input type="text" class="form-control"  name="price" required>
            </div>
            <br />
            <button  type="submit" name="login" value="Add Item" class="btn btn-primary">Add item</button>
        </form>
    
    </div>
    <center>
        <div class="container bg-light">
    <h1>All Food items</h1>

    <table style="border: 2px solid black;">
        <tr style="border: 2px solid black;">
            <th style="border: 2px solid black;">ID</th>
            <th style="border: 2px solid black;">Name</th>
            <th style="border: 2px solid black;">Type</th>
            <th style="border: 2px solid black;">Price</th>
        </tr>
        <% for (var i=0; i < foods.length; i++) {%>
            <tr>
                <td style="border: 2px solid black;">
                    <%= foods[i].fid %>
                </td>
                <td style="border: 2px solid black;">
                    <%= foods[i].fname %>
                </td>
                <td style="border: 2px solid black;">
                    <%= foods[i].ftype %>
                </td>
                <td style="border: 2px solid black;">
                    <%= foods[i].price %>
                </td>
            </tr>
            <% } %>
    </table>
</div>
    </center>


