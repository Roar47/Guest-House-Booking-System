<center>
<div class="container bg-light">
    <h2>User Details</h2>
<table style="border: 2px solid black;">
    <tr style="border: 2px solid black;">
        <th style="border: 2px solid black;">
            Customer ID
        </th>
        <td style="border: 2px solid black;">
            <%= data.cid %>
        </td>
    </tr>
    <tr style="border: 2px solid black;">
        <th style="border: 2px solid black;">
            Name
        </th>
        <td style="border: 2px solid black;">
            <%= data.name %>
        </td>
    </tr>
    <tr style="border: 2px solid black;">
        <th style="border: 2px solid black;">
            Mobile Number
        </th>
        <td style="border: 2px solid black;">
            <%= data.mobile %>
        </td>
    </tr>
    <tr style="border: 2px solid black;">
        <th style="border: 2px solid black;">
            Email
        </th>
        <td style="border: 2px solid black;">
            <%= data.email %>
        </td>
    </tr>
    <tr style="border: 2px solid black;">
        <th style="border: 2px solid black;">
            Check-in Date
        </th>
        <td style="border: 2px solid black;">
            <%= data.checkin %>
        </td>
    </tr>
    <tr style="border: 2px solid black;">
        <th style="border: 2px solid black;">
            Total bill
        </th>
        <td style="border: 2px solid black;">
            <%= data.amount %>
        </td>
    </tr>
    <tr style="border: 2px solid black;">
        <th style="border: 2px solid black;">
            Paid bill
        </th>
        <td style="border: 2px solid black;">
            <%= data.paid %>
        </td>
    </tr>
    <tr style="border: 2px solid black;">
        <th style="border: 2px solid black;">
            Amount to be paid
        </th>
        <td style="border: 2px solid black;">
            <%= data.amount-data.paid %>
        </td>
    </tr>
</table>
</div>
<br>

<form action="/user/paybill">
    <button type="submit" class="btn btn-primary btn-lg btn-block">Pay Your Bill</button>
</form>
</center>